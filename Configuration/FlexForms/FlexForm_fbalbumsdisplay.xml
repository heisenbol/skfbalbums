
 <T3DataStructure>
 <meta type="array">
	 <langChildren>0</langChildren>
	 <langDisable>1</langDisable>
 </meta>
 <ROOT>
 	<type>array</type>
	 <el>
	 	<!-- 
	 		http://blog.teamgeist-medien.de/2014/02/typo3-extbase-standard-action-per-flexform-festlegen-switchablecontrolleractions.html
	 	-->
        <switchableControllerActions>
            <TCEforms>
                <label>What to display</label>
                <onChange>reload</onChange>
                <config>
                    <type>select</type>
                    <items type="array">
                        <numIndex index="1" type="array">
                            <numIndex index="0">Display Album List</numIndex>
                            <numIndex index="1">Album->list;Album->show;</numIndex>
                        </numIndex>
                        <numIndex index="2" type="array">
                            <numIndex index="0">Display Single Album Photos</numIndex>
                            <numIndex index="1">Album->show;</numIndex>
                        </numIndex>
                    </items>
                </config>
            </TCEforms>
        </switchableControllerActions>

		<settings.albumlayout>
			<TCEforms>
				<label>Album List Layout</label>
		        
                <displayCond><![CDATA[FIELD:switchableControllerActions:=:Album->list;Album->show;]]></displayCond>

				<config>
					<type>select</type>
					<items type="array">
						<numIndex index="0" type="array">
							<numIndex index="0">Default simple</numIndex>
							<numIndex index="1">Default</numIndex>
						</numIndex>
						<numIndex index="1" type="array">
							<numIndex index="0">Css Masonry</numIndex>
							<numIndex index="1">CssMasonry</numIndex>
						</numIndex>
						<numIndex index="2" type="array">
							<numIndex index="0">Raw output</numIndex>
							<numIndex index="1">Raw</numIndex>
						</numIndex>
					</items>
					<maxitems>1</maxitems>
					<size>1</size>
				</config>
			</TCEforms>
		</settings.albumlayout>


		<settings.photolayout>
			<TCEforms>
				<label>Single Album Layout</label>
				<onChange>reload</onChange>
				<config>
					<type>select</type>
					<items type="array">
						<numIndex index="0" type="array">
							<numIndex index="0">Default simple</numIndex>
							<numIndex index="1">Default</numIndex>
						</numIndex>
						<numIndex index="1" type="array">
							<numIndex index="0">Css Masonry with Lightbox</numIndex>
							<numIndex index="1">CssMasonry</numIndex>
						</numIndex>
						<numIndex index="2" type="array">
							<numIndex index="0">Unite Gallery (needs jquery in your page)</numIndex>
							<numIndex index="1">Unitegallery</numIndex>
						</numIndex>
						<numIndex index="3" type="array">
							<numIndex index="0">Raw output</numIndex>
							<numIndex index="1">raw</numIndex>
						</numIndex>
					</items>
					<maxitems>1</maxitems>
					<size>1</size>
				</config>
			</TCEforms>
		</settings.photolayout>

		<settings.unitetheme>
			<TCEforms>
				<label>Unite Gallery Theme</label>
                <displayCond><![CDATA[FIELD:settings.photolayout:=:Unitegallery]]></displayCond>
				<config>
					<type>select</type>
					<items type="array">
						<numIndex index="0" type="array">
							<numIndex index="0">Default</numIndex>
							<numIndex index="1">default</numIndex>
						</numIndex>
						<numIndex index="1" type="array">
							<numIndex index="0">Tiles Columns</numIndex>
							<numIndex index="1">tilescolumns</numIndex>
						</numIndex>
						<numIndex index="2" type="array">
							<numIndex index="0">Tiles Justified</numIndex>
							<numIndex index="1">tilesjustified</numIndex>
						</numIndex>
						<numIndex index="3" type="array">
							<numIndex index="0">Tiles Nested</numIndex>
							<numIndex index="1">tilesnested</numIndex>
						</numIndex>
						<numIndex index="4" type="array">
							<numIndex index="0">Tiles Grid</numIndex>
							<numIndex index="1">tilesgrid</numIndex>
						</numIndex>
						<numIndex index="5" type="array">
							<numIndex index="0">Carousel</numIndex>
							<numIndex index="1">carousel</numIndex>
						</numIndex>
						<numIndex index="6" type="array">
							<numIndex index="0">Compact</numIndex>
							<numIndex index="1">compact</numIndex>
						</numIndex>
						<numIndex index="7" type="array">
							<numIndex index="0">Grid Theme</numIndex>
							<numIndex index="1">gridtheme</numIndex>
						</numIndex>
						<numIndex index="8" type="array">
							<numIndex index="0">Slider</numIndex>
							<numIndex index="1">slider</numIndex>
						</numIndex>
					</items>
					<maxitems>1</maxitems>
					<size>1</size>
				</config>
			</TCEforms>
		</settings.unitetheme>

		<settings.uniteparams>
			<TCEforms>
				<label>Unite Gallery additional params. One per line of the form name:value without quotes</label>
                <displayCond><![CDATA[FIELD:settings.photolayout:=:Unitegallery]]></displayCond>
				<config>
					<type>text</type>
				</config>
			</TCEforms>
		</settings.uniteparams>

		<settings.albumForSingle>
			<TCEforms>
				<label>Album for single view</label>
                <displayCond><![CDATA[FIELD:switchableControllerActions:=:Album->show;]]></displayCond>

				<config>
					<type>select</type>
					<itemsProcFunc>Skar\Skfbalbums\Helper\ItemsProcFunc->user_singleAlbum</itemsProcFunc>
					<renderType>selectSingle</renderType>
					<items>
						<numIndex index="0" type="array">
							<numIndex index="0"></numIndex>
							<numIndex index="1"></numIndex>
						</numIndex>
					</items>
				</config>
			</TCEforms>
		</settings.albumForSingle>


		<settings.useFbRedirectUrls>
			<TCEforms>
				<label>Use Facebook redirect urls for image files instead of direct CDN urls</label>
				<config>
					<type>check</type>
				</config>
			</TCEforms>
		</settings.useFbRedirectUrls>
